{
  "compilerOptions": {
    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "dom"
    ],
    "baseUrl": "/packages",
    "paths": {
      "@gradient-js/core": ["core/lib"],
      "@gradient-js/css": ["css/lib"],
      "@gradient-js/svg": ["css/svg"]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": ["/packages/core", "packages/css", "packages/svg"]
}